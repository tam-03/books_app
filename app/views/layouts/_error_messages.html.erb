<% if model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(model.errors.count, t('.error')) %> <%= t('.message') %></h2>

      <ul>
        <% model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
