<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>郵便番号</h3>
<%= @user.postal_code %>
<h3>住所</h3>
<%= @user.street_address %>
<h3>プロフィール</h3>
<%= @user.profile %>

<h3>Books</h3>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.book.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.user.name %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('.show'), book %></td>
        <td><%= link_to t('.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('.destroy'), book, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

