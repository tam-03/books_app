<h1>ユーザー名</h1>
<%= @user.name %>
<h3>メールアドレス</h3>
<%= @user.email %>
<h3>郵便番号</h3>
<%= @user.postal_code %>
<h3>住所</h3>
<%= @user.street_address %>
<h3>プロフィール</h3>
<%= @user.profile %>

<h3><%= @user.name %>の投稿一覧</h3>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.book.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.user.name %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "表示", book %></td>
        <td><%= link_to "編集", edit_book_path(book) %></td>
        <td><%= link_to "削除", book, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

