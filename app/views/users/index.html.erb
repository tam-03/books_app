<h1><%= t('.users_page') %></h1>
<% @users.each do |user| %>
  <% if user.name == current_user.name %>
    <p><strong><%= link_to user.name, users_show_path %></strong></p>
  <% else %>
    <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
        <p><%= user.name %></p>
        <p><%= link_to t('.followed'), user_user_relationship_path(user.id, current_user.id), method: :delete %></p>
      <% else %>
        <p><%= user.name %></p>
        <p><%= link_to t('.following'), user_user_relationships_path(user.id), method: :post %></p>
      <% end %>
    <% end %>
  <% end %>
<% end %>
